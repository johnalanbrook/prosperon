@vs pvs
in vec2 apos;
in vec2 auv;
in vec4 acolor;

out vec4 color;
out vec2 uv;

uniform pvs_params { mat4 proj; };

void main()
{
  gl_Position = proj * vec4(apos, 0.0, 1.0);
  color = acolor;
  uv = auv;
}
@end

@fs pfs
in vec4 color;
in vec2 uv;
out vec4 fcolor;

void main()
{
  fcolor = color;
}
@end

@program poly pvs pfs